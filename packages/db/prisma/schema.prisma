generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://postgres:mysecretpassword@localhost:8080/mydatabase"
}

model User  {
  id              String  @id @default(uuid())
  username        String  @unique
  password        String
  contents        Content[]
  links           Link[]
}

model Content{
  id            String        @id @default(uuid())
  link          String        @unique
  type          ContentType
  title         String
  tags          Tag[]
  userId        String          
  user          User          @relation(fields: [userId], references: [id])
}

model Tag{
  id            String        @id @default(uuid())
  title         String        @unique
  contents      Content[]
}

model Link{
  id            String       @id @default(uuid())
  hash          String
  userId        String
  user          User         @relation(fields: [userId], references: [id])
}

enum ContentType {
    ARTICLE
    VIDEO
    IMAGE
    AUDIO
}